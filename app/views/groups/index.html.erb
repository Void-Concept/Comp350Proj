<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<% if user_signed_in? %>
<div align='right'><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></div>
<% end %>
<% if !user_signed_in? %>
<div align='right'><%= link_to 'Sign In', user_session_path, method: :create %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= User.find(group.admin).email %></td>
        <td><%= link_to 'Subscribe', subscribe_group_path(id: group.id) %></td>
        <td><%= link_to 'Show', group %></td>
        <% if user_signed_in? %>
            <% if current_user.id == group.admin %>
              <td><%= link_to 'Edit', edit_group_path(group) %></td>
            <% end %>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Group', new_group_path %>
<% end %>