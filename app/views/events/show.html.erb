<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @event.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.end_time %>
</p>

<p>
  <strong>Group:</strong>
  <%= @event.group %>
</p>

<% if user_signed_in? %>
	<% if current_user[:email] == @event[:author] %>
		<%= link_to 'Edit', edit_event_path(@event) %> |
	<% end %>
<% end %>
<%= link_to 'Back', events_path %>
